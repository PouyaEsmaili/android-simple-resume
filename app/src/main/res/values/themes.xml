<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Resume" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="profileSize">192dp</item>
        <item name="profileTopMargin">32dp</item>

        <item name="nameColor">@color/teal_700</item>
        <item name="nameFontSize">40sp</item>
        <item name="nameTopMargin">32dp</item>

        <item name="titleColor">@color/teal_500</item>
        <item name="titleFontSize">28sp</item>
        <item name="titleTopMargin">24dp</item>
        <item name="titleHorizontalMargin">24dp</item>

        <item name="bodyColor">@color/teal_400</item>
        <item name="bodyFontSize">24sp</item>
        <item name="bodyTopMargin">4dp</item>
        <item name="bodyHorizontalMargin">28dp</item>
    </style>
</resources>